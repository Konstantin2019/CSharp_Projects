<Window x:Class="MailSender.EditRecipient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailSender"
        mc:Ignorable="d"
        Title="Редактирование получателя" Height="155" Width="400"
        DataContext="{Binding Path=MailSenderVM, Source={StaticResource Locator}}">
    <StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Text="Имя" 
                       FontSize="16" 
                       Margin="5,5,5,0"
                       Grid.Column="0" 
                       Grid.Row="1"/>
            <TextBlock Text="Адрес" 
                       FontSize="16" 
                       Margin="5,5,5,0"
                       Grid.Column="0" 
                       Grid.Row="2"/>
            <TextBlock Text="Описание" 
                       FontSize="16" 
                       Margin="5,5,5,0" 
                       Grid.Column="0" 
                       Grid.Row="3"/>
            <TextBox Grid.Column="1" 
                     Grid.Row="1"
                     FontSize="16"
                     Margin="0,5,5,0"
                     Text="{Binding Path=SelectedRecipient.Name, NotifyOnValidationError=True}"/>
            <TextBox Grid.Column="1" 
                     Grid.Row="2" 
                     FontSize="16"
                     Margin="0,5,5,0"
                     Text="{Binding Path=SelectedRecipient.Address, NotifyOnValidationError=True}"/>
            <TextBox Grid.Column="1" 
                     Grid.Row="3" 
                     FontSize="16"
                     Margin="0,5,5,0"
                     Text="{Binding Path=SelectedRecipient.Description}"/>
            <StackPanel Grid.Column="0"
                        Grid.Row="4"
                        Grid.ColumnSpan="2"
                        Height="25"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,5,0,0">
                <Button Content="Подтвердить"
                        MinWidth="100"
                        Command="{Binding Path=AcceptCommand}"/>
                <Button Content="Отменить"
                        MinWidth="100"
                        Command="{Binding Path=AbortCommand}"/>
            </StackPanel>
        </Grid>
    </StackPanel>
</Window>

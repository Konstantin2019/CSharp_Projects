<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HatGameMobile.Views.MainPage"
             Title="{Binding Path=Title}">

    <StackLayout>
        <Button Text="Начать игру" Command="{Binding Path=NavigateToPlay}"/>
        <Button Text="Собрать свою шляпу" Command="{Binding Path=NavigateToCustom}"/>
        <Button Text="Использовать готовые слова" Command="{Binding Path=NavigateToPreset}"/>
        <Button Text="Выход" Command="{Binding Path=NavigateToExit}"/>
    </StackLayout>

</ContentPage>